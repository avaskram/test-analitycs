btn-outline-thick()
  border-width 2px
  line-height ($button-size - (4*$rem-px))

  for size in $button-sizes
    +add-mod(size)
      line-height (($button-size-)+(size) - (4*$rem-px))


btn-outline-dashed()
  border-style dashed

////// appearance types
btn-rounded()
  btn-rounded-base($button-size)

btn-corner()
  border-radius 0
  &:after
    border-radius 0

btn-amount()
  padding-bottom 2px

  +after()
    fullsize-scale(-1px)
    pointer-events none
    box-shadow 0 -.15em 0 alpha(#000,.1) inset
    transition box-shadow .2s ease 0s
    border-radius $button-radius

  &:active
    translated(0,-0.5*(-.15em))
    box-shadow none
    &:after
      box-shadow 0 -1px 0 rgba(0,0,0,0.1) inset


btn-shadow()
  box-shadow $button-shadow
  &:hover
    box-shadow $button-shadow-hover

  &:active
    box-shadow none

btn-text()
  background-color transparent
  border-color transparent

  &:hover
    background-color transparent


