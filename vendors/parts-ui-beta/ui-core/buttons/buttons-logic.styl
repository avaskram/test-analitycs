/// buttons
///// base rules
btn-base()
  inline-block-top()
  transition transform .2s ease 0s, opacity .2s ease 0s, background .2s ease 0s, border-color .2s ease 0s, box-shadow .2s ease 0s, color .2s ease 0s
  text-align center
  cursor pointer
  outline none
  position relative
  text-decoration none
  font-family inherit
  border 1px solid transparent
  white-space nowrap
  max-width 100%
  box-sizing border-box


btn-outline-base(bc)
  border-color bc
  background-color transparent
  color $base-color

  &:hover
    background-color alpha(bc,.12)
  &:active
    background-color alpha(bc,.3)

btn-fill(bg,cc)
  background-color bg
  color cc
  border-color transparent
  &:hover
    background-color darken(bg,3)
  &:active
    background-color darken(bg,5)

  for fill in $button-colors
    if fill == alpha
      +add-mod(alpha)
        background-color alpha(bg,.2)
        &:hover
          background-color alpha(bg,.3)
        &:active
          background-color alpha(bg,.4)

      +add-mod(outline)
        +add-mod(alpha)
          background-color transparent
          &:hover
            background-color alpha(bg,.2)
          &:active
            background-color alpha(bg,.3)


btn-shadow-base(distance,size,color)
  box-shadow 0 distance size color

btn-icon-base(size)
  padding-x(0)
  square(size)
  font-size 0

btn-rounded-base(br)
  border-radius br

  +add-mod(amount)
    &:after
      border-radius br

btn-size(hh)
  line-height hh
  padding-x($button-padding*(hh*$input-scale))

