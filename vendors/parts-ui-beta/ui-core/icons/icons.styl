///// icon
+theme(icon)
	display inline
	vertical-align baseline
	position relative
	width 1em
	height 1em
	padding 0
	margin 0
	line-height 1em
	stroke-width 0
	stroke currentColor
	fill currentColor
	// transform-reset()

	&--left
		vertical-align middle
		margin-right $icon-side-indent

	&--right
		vertical-align middle
		margin-left $icon-side-indent

	&--edge
		centering-y()
		+add-mod(left)
			left $input-space
			margin 0

		+add-mod(right)
			right $input-space
			margin 0
