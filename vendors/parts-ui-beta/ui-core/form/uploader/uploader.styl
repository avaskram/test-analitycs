+theme(uploader)
  position relative
  overflow hidden
  cursor pointer

  input
    opacity 0
    position absolute
    right 0
    top 0
    font-size 100rem
    cursor pointer
    z-index 2

  &__container
    transition-opacity(.2s)


  &__icon
    +css-icon-plus(24px,2px,$gray-element)
      transition background .2s ease 0s

  &__title
    text-md()
    text-color-theme()
    text-medium()
    margin-bottom $rem-sm

  &__text
    text-color-gray()
    text-sm()

  &__image
    fullsize()
    bg-cover()
    invisible()
    scaled(1.1)
    transition-opacity-transform(.3s)


  &__remove
    circle-fill(22px,#fff)
    transition-opacity-transform(.3s)
    invisible()
    font-size 1rem
    color #fff
    position absolute
    line-height 22px
    color $base-color
    cursor pointer
    text-align center
    z-index 2

  &--area
    background-color $gray-light
    border-radius $radius-lg
    border 1px dashed $gray-border
    base-transition(.2s)

    &:hover
      border-color $theme-color

      +child-el(icon)
        &:after
        &:before
          background-color $theme-color

  &--sm
    width 70px
    height 70px
    +child-el(remove)
      centering-width(22px)
      right auto
      transform translate3d(0px,-3px,0)
      top 3px

  &--md
    width 120px
    height 120px

    +child-el(remove)
      centering-width(22px)
      right auto
      transform translate3d(0px,-5px,0)
      top 5px

  &--lg
    padding 3.33rem 2.5rem 3.5rem
    text-align center
    margin 1rem 0

    +child-el(icon)
      css-icon-plus(40px,2px,$gray-element)
      width 40px
      height 40px
      margin 0 auto 1.2rem
      position relative

    +child-el(remove)
      circle-fill(30px,#fff)
      transform translate3d(5px,-5px,0)
      top 10px
      right 10px
      line-height 28px
      font-size 1.6rem

  &--light
    background-color #fff

  &--uploaded
    & ^[0]__icon
    & ^[0]__title
    & ^[0]__text
      invisible()

    +child-el(image)
      visible-transform()


    +add-mod(area)
      border-style solid
      background-color transparent

    &:hover
      background-color $theme-color
      border-color $theme-color

      +child-el(image)
        opacity .2
        transition-delay 0s

      +child-el(remove)
        visible-transform()

        &:hover
          scaled(1.1)


      +child-el(button)
        display none

      +child-el(progress)
        display block



  &--attachment
  
    +child-el(icon)
      height 150px
      width 100px
      color $theme-color
      border 3px solid $theme-color
      padding 4px 20px 0
      border-radius 10px
      flex-col-md()
      opacity .3
      position static


      +before()
        width 28px
        height 4px
        background-color $theme-color
        margin-bottom 9px
        position static
        margin-left 0
        transform none

      +after()
        width 100%
        height 4px
        background-color $theme-color
        position static
        margin 0
        transform none

      span
        display block

        +before()
          height 4px
          background-color $theme-color
          margin-bottom 9px

        +after()
          height 4px
          background-color $theme-color
          margin-bottom 9px


  &__progress
    position relative
    overflow hidden
    display none

  &__name
    text-md()
    margin-bottom 1rem

  &__close
    cursor pointer

  &__data
    text-sm()
    color $gray-color

  +media(md)
    &--lg
      padding 2rem 1.5rem 2rem
