@require '../defaults/checkbox'

+theme(checkbox)
  check-input-item()

  &__icon
    text-color-theme()
    check-input-icon()
    radius-sm()

    +before()
      css-icon-bg-check($dark-mute)
      fullsize()
      background-size 68%
      background-position center
      background-repeat no-repeat

