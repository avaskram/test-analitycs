/// backgrounds
///// background sizes and positions
//////// size cover
bg-cover-base()
  background-size cover
  background-repeat no-repeat

bg-cover()
  bg-cover-base()
  background-position center center

bg-cover-top()
  bg-cover-base()
  background-position top center

bg-cover-bottom()
  bg-cover-base()
  background-position bottom center


bg-cover-right()
  bg-cover-base()
  background-position center right

bg-cover-left()
  bg-cover-base()
  background-position center left


//////// size 100%
bg-100-base()
  background-size 100%
  background-repeat no-repeat

bg-100()
  bg-100-base()
  background-position center center

bg-100-top()
  bg-100-base()
  background-position top center
  background-repeat no-repeat

bg-100-bottom()
  bg-100-base()
  background-position bottom center



