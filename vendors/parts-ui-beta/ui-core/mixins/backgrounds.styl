///// bg element
bg-block()
  &,
  &__image
    fullsize-bg()


///// bg icon
bg-icon(url,w,h)
  background-repeat no-repeat
  background-position center center
  background-image url(url)
  background-size w h
  width w
  height h

///// bg image
bg-image(url,w,h)
  background-repeat no-repeat
  background-position center center
  background-image url(url)
  background-size w h
  width w
  height h


///// dots bg
bg-dot(size,color)
  background-image linear-gradient(to right,color 50%, transparent 0%)
  background-repeat repeat-x
  background-size size (size/2)

///// dots bg svg
bg-dot-svg(size,color)
  background-image embedurl('data:image/svg+xml,<svg preserveAspectRatio="xMidYMid meet" viewBox="0 0 '+size+' '+size+'" width="'+size+'" height="'+size+'" version="1.1" xmlns="http://www.w3.org/2000/svg"><path d="M2.000,1.000 L2.000,-0.000 L3.000,-0.000 L3.000,1.000 L2.000,1.000 ZM-0.000,2.000 L1.000,2.000 L1.000,3.000 L-0.000,3.000 L-0.000,2.000 Z" fill="'+color+'"/></svg>', "utf8")
  background-repeat repeat
  background-size (size)px (size)px



///// video element bg
bg-video()
  min-height 100%
  min-width 100%
  width auto
  height auto
  centering-transform()
