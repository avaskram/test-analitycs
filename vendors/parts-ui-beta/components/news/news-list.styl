/// news-list
.news-item
  position relative
  padding-bottom 4.8rem
  display block
  clear-padding-bottom()
  +before()
    background-color #e1e7ee
    width 1px
    position absolute
    bottom -20px
    top 50px
    left 2px

  +last()
    &:before
      bottom auto

  &--active,
  &:hover
    +child-el(container)
      &:before
        visible-transform()

    +child-el(title)
      color $theme-color

    +child-el(date)
      &:before
        visible-transform()

    .socials-list
      &__link
        visible-transform()
        for child in [1 2 3 4 5]
          &:nth-child({child})
            transition-delay .06s*(child)
        &:hover
          transition-delay 0s

  &__link
    fullsize()
    display block


  &__container
    position relative
    padding-top 1.3rem
    padding-bottom 1.5rem
    min-height 234px

    +before()
      // fullsize-scale(-26px,-20px)
      position absolute
      top -20px
      bottom -20px
      left -26px
      right 0
      invisible()
      base-transition(.2s)
      scaled(.98)
      background-color #fff
      box-shadow 0 17px 60px alpha(#bdc8d3,.3)

  &__inner
    position relative

  &__content
    position relative
    padding-left 1rem
    padding-right 2rem

  &__date
    text-sm()
    padding-left: 28px;
    padding-top: 3px;
    font-weight 600
    position relative

    +before()
      circle(32px)
      background-color alpha($theme-color,.5)
      position absolute
      left -13px
      top -3px
      invisible()
      base-transition(.2s)
      scaled(.5)

    +after()
      circle(16px)
      background-color $theme-color
      position absolute
      left -5px
      top 5px




  &__day
  &__time
    white-space nowrap

  &__title
    title-base()
    text-h3()
    base-transition(.2s)
    margin-bottom .8rem

  &__text
    color $gray-dark
    +text-style()
      line-height 1.68em

  &__share
    position absolute
    right 20px
    top 3px


  +media(l)
    &__container
      &:before
        left -15px
        right -15px

    &:before
      left 16px

    &__container
      min-height 0


    &__content
      padding-right 0
      padding-left 2.2rem

    &__title
      font-size 1.2rem

    &__text
      text-md()

    &__share
      position relative
      // margin-top

    .socials-list
      flex-direction row
      justify-content flex-end
      &__link
        visible-transform()


    &__date
      padding-left 40px
      &:before
        left 0
      &:after
        left 8px

  +media(md)
    &__text
      text-sm()
