+theme(datepicker)
  .ui-datepicker
    width auto
    table
      margin 0 2rem
      padding 0
      width auto
      min-width 0
    thead
      border-gray-bottom()
    tbody
      padding-top 4px
    tr
      &:first-child
        td
          padding-top 21px
    td
      border 0
      background-color transparent
      position relative
      padding 0 .15rem
      color $gray-text
      height 38px
      text-sm()

    th
      text-xs()
      color $gray-text
      text-transform uppercase
      padding 1rem 0
      background-color transparent
      font-weight 500
      position relative

      +after()
        // height 1px
        fullsize-bottom()
        background-color $gray-light

      +first()
        &:after
          left 5px
      +last()
        &:after
          right 5px


    &.ui-widget
      border-gray()
      padding 0 0 1rem
      position relative
      margin 0
      background-image none
      font-family $base-font
      margin 0 auto
      border-radius $radius
      box-shadow 0 5px 30px alpha(#000,.1)
      background-color #fff
      min-height 370px

      .ui-datepicker
        &-header
          border-radius $radius $radius 0 0
          background-color $theme-color
          border 0
          color #fff
          padding 0.77rem 0
          margin-left -1px
          margin-top -1px
          margin-right -1px
          position relative

    &
      .ui-state
        &-default
          base-transition(.2s)
          link-text()
          circle(32px)
          border 1px solid transparent
          background-color transparent
          text-align center
          background-image none
          font-family $base-font
          color $base-color
          line-height 32px
          display block
          padding 0
          margin 0 auto


        &-hover
          background-color alpha($theme-color,.1)
          border-color alpha($theme-color,.1)

        &-active
          background-color $theme-color
          border-color $theme-color
          color #fff
          box-shadow: 0 5px 20px alpha(#000,.1)


        &-disabled
          opacity .3
          text-decoration none
          pointer-events none


      .not-available
        pointer-events none
        a
          background-color #c7c7c7
          border-color #c7c7c7
          pointer-events none
          color #fff
          pointer-events none

      .not-confirmed
        a
          border-color $gray-light
          &.ui-state
            &-active
              border-color $theme-color

      .ui-datepicker
        &-next
        &-prev
          position absolute
          font-size 0
          padding 1rem
          top 0
          bottom 0
          width auto
          height auto
          display block
          border 0
          line-height 0
          span
            background-image none
            overflow visible
            width auto
            height auto
            text-indent 0
            font-size 0
            top auto
            left auto
            margin 0
            display block
            line-height 0
            centering-y()
            base-transition(.2s)


            &:before
              font-icon()
              font-icon-inline()
              text-xs()
              color #fff

          &:hover
            span
              // left auto
              // top auto
              // bottom auto
              // right auto

              margin 0

        &-next
          right 0
          text-align right
          span
            right 1rem
            &:before
              ic-arrow-right-sm()


        &-prev
          left 0
          text-align left
          span
            left 1rem
            &:before
              ic-arrow-left-sm()

        &-title
          text-md()
          color #fff
          font-weight 500
          text-transform uppercase

        &-current-day
          a
            background-color $theme-color
            color #fff
            box-shadow 0 7px 15px alpha(#000,.1)

      &-calendar
        background-color #fff
        color $base-color


    +media(sm)
      table
        margin-left .77rem
        margin-right .77rem


      &.ui-widget
        min-height 360px
